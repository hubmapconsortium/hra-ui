{
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/eslint.config.js",
      "!{projectRoot}/.storybook/**/*",
      "!{projectRoot}/**/*.stories.@(js|jsx|ts|tsx|mdx)",
      "!{projectRoot}/tsconfig.storybook.json",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/**/test.[jt]s",
      "!{projectRoot}/cypress/**/*",
      "!{projectRoot}/**/*.cy.[jt]s?(x)",
      "!{projectRoot}/cypress.config.[jt]s"
    ],
    "sharedGlobals": []
  },
  "plugins": [
    {
      "plugin": "@nx/eslint/plugin",
      "options": {}
    },
    {
      "plugin": "@nx/jest/plugin",
      "options": {}
    },
    {
      "plugin": "@nx/storybook/plugin",
      "options": {}
    }
  ],
  "targetDefaults": {
    "@nx/angular:application": {
      "cache": true,
      "inputs": ["production", "^production"],
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["^build"],
      "options": {
        "index": "{projectRoot}/src/index.html",
        "browser": "{projectRoot}/src/main.ts",
        "tsConfig": "{projectRoot}/tsconfig.app.json",
        "outputPath": "dist/{projectRoot}",
        "inlineStyleLanguage": "scss",
        "styles": ["{projectRoot}/src/styles.scss"],
        "stylePreprocessorOptions": {
          "includePaths": ["node_modules/", "libs/design-system/styles"]
        },
        "outputHashing": "none",
        "plugins": ["tools/esbuild-plugins/disable-code-splitting.mjs"],
        "define": {
          "define": "undefined"
        }
      },
      "defaultConfiguration": "production",
      "configurations": {
        "production": {
          "baseHref": "/ui/{projectName}/",
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "8kb",
              "maximumError": "16kb"
            }
          ]
        },
        "staging": {
          "baseHref": "/ui-staging/{projectName}/"
        },
        "development": {
          "baseHref": "/",
          "optimization": false,
          "sourceMap": true,
          "namedChunks": true
        },
        "preview": {
          "baseHref": "/apps/{projectName}/",
          "optimization": false,
          "sourceMap": true,
          "namedChunks": true
        }
      }
    },
    "@nx/angular:package": {
      "cache": true,
      "inputs": ["production", "^production"],
      "dependsOn": ["^build"],
      "options": {
        "project": "{projectRoot}/ng-package.json"
      },
      "defaultConfiguration": "production",
      "configurations": {
        "production": {
          "tsConfig": "{projectRoot}/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "{projectRoot}/tsconfig.lib.json"
        }
      }
    },
    "@nx/angular:dev-server": {
      "defaultConfiguration": "development",
      "configurations": {
        "production": {
          "buildTarget": "{projectName}:build:production"
        },
        "development": {
          "buildTarget": "{projectName}:build:development"
        }
      }
    },
    "@twittwer/compodoc:compodoc": {
      "cache": true,
      "inputs": ["production"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/compodoc/{projectName}",
        "name": "Code Documentation for {projectName}"
      },
      "configurations": {
        "ci": {
          "silent": true
        },
        "serve": {
          "watch": true,
          "disableCoverage": false,
          "disablePrivate": false,
          "disableInternal": false
        },
        "test-coverage": {
          "coverageTest": 100,
          "coverageMinimumPerFile": 100,
          "coverageTestThresholdFail": true
        }
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "storybook": {
      "options": {
        "port": 4400,
        "compodoc": true,
        "compodocArgs": ["-e", "json", "-d", "{projectRoot}/.storybook/compodoc", "--silent"]
      }
    },
    "build-storybook": {
      "options": {
        "outputDir": "dist/storybook/{projectName}",
        "compodoc": true,
        "compodocArgs": ["-e", "json", "-d", "{projectRoot}/.storybook/compodoc", "--silent"]
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "static-storybook": {
      "options": {
        "staticFilePath": "dist/storybook/{projectName}",
        "spa": true
      }
    },
    "test-storybook": {
      "options": {
        "args": ["--url", "http://localhost:4400"]
      }
    },
    "build-webcomponent": {
      "cache": true,
      "inputs": [
        {
          "dependentTasksOutputFiles": "**/*.js"
        }
      ],
      "outputs": ["{workspaceRoot}/dist/{projectRoot}/browser/wc.js"],
      "dependsOn": [
        {
          "target": "build",
          "params": "forward"
        }
      ]
    },
    "bundle-cli": {
      "cache": true,
      "inputs": ["production", "^production"],
      "outputs": ["{workspaceRoot}/dist/{projectRoot}/cli.js"]
    }
  },
  "generators": {
    "@nx/angular:application": {
      "e2eTestRunner": "none",
      "linter": "eslint",
      "style": "scss",
      "unitTestRunner": "jest"
    },
    "@nx/angular:library": {
      "linter": "eslint",
      "unitTestRunner": "jest"
    },
    "@nx/angular:component": {
      "style": "scss",
      "changeDetection": "OnPush",
      "displayBlock": true,
      "export": true,
      "standalone": true
    }
  },
  "nxCloudAccessToken": "NWM3NTZiNjktMDcyMS00ZmQ3LWFlNzYtZDZkZmY0OTVjYzU3fHJlYWQtd3JpdGU="
}
