{
  "name": "shared-utils",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/shared/utils/src",
  "prefix": "ftu",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/shared/utils/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/shared/utils/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/shared/utils/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/shared/utils/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/shared/utils/**/*.ts",
          "libs/shared/utils/**/*.html",
          "libs/shared/utils/types/**/*.ts",
          "libs/shared/utils/types/**/*.html"
        ]
      }
    },
    "compodoc": {
      "executor": "@twittwer/compodoc:compodoc",
      "options": {
        "tsConfig": "libs/shared/utils/tsconfig.lib.json",
        "outputPath": "dist/compodoc/shared-utils"
      },
      "configurations": {
        "serve": {
          "watch": true,
          "disableCoverage": false,
          "disablePrivate": false,
          "disableInternal": false
        }
      }
    },
    "compodoc-json": {
      "executor": "@twittwer/compodoc:compodoc",
      "options": {
        "tsConfig": "libs/shared/utils/tsconfig.lib.json",
        "outputPath": "dist/compodoc/shared-utils",
        "exportFormat": "json"
      }
    },
    "test-doc-coverage": {
      "command": "compodoc -p libs/shared/utils/tsconfig.lib.json -d tmp/doc-coverage -e json --coverageTest --coverageMinimumPerFile 100 --coverageTestShowOnlyFailed -t"
    }
  },
  "tags": ["utils"]
}
