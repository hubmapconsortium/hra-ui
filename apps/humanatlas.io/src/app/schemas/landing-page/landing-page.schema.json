{
  "$ref": "#/definitions/LandingPage",
  "definitions": {
    "LandingPage": {
      "type": "object",
      "properties": {
        "$schema": {
          "type": "string"
        },
        "carouselItems": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "tagline": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "imageSrc": {
                "type": "string"
              },
              "action": {
                "type": "string"
              },
              "link": {
                "anyOf": [
                  {
                    "type": "object",
                    "properties": {
                      "url": {
                        "type": "string",
                        "format": "uri"
                      }
                    },
                    "required": ["url"],
                    "additionalProperties": false
                  },
                  {
                    "type": "object",
                    "properties": {
                      "route": {
                        "type": "string"
                      }
                    },
                    "required": ["route"],
                    "additionalProperties": false
                  }
                ]
              }
            },
            "required": ["tagline", "description", "imageSrc", "action", "link"],
            "additionalProperties": false
          }
        },
        "countInfo": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string"
              },
              "count": {
                "type": ["number", "string"]
              },
              "icon": {
                "anyOf": [
                  {
                    "type": "object",
                    "properties": {
                      "fontText": {
                        "type": "string"
                      }
                    },
                    "required": ["fontText"],
                    "additionalProperties": false
                  },
                  {
                    "type": "object",
                    "properties": {
                      "url": {
                        "type": "string"
                      }
                    },
                    "required": ["url"],
                    "additionalProperties": false
                  }
                ]
              }
            },
            "required": ["label", "count", "icon"],
            "additionalProperties": false
          }
        },
        "sectionCardInfo": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "tagline": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "imageSrc": {
                "type": "string"
              },
              "route": {
                "type": "string"
              }
            },
            "required": ["tagline", "description", "imageSrc", "route"],
            "additionalProperties": false
          }
        }
      },
      "required": ["$schema", "carouselItems", "countInfo", "sectionCardInfo"],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}
