{
  "name": "ftu-ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/ftu-ui/src",
  "prefix": "ftu",
  "tags": ["type:app", "project:ftu"],
  "metadata": {
    "version": "1.0.0"
  },
  "targets": {
    "build": {
      "executor": "@nx/angular:application",
      "options": {
        "assets": [
          "apps/ftu-ui/src/favicon.png",
          "apps/ftu-ui/src/assets",
          {
            "input": "libs/design-system/assets",
            "glob": "**/*",
            "output": "./assets"
          }
        ],
        "polyfills": ["zone.js"]
      },
      "configurations": {
        "staging": {
          "fileReplacements": [
            {
              "replace": "apps/ftu-ui/src/environments/environment.ts",
              "with": "apps/ftu-ui/src/environments/environment.stage.ts"
            }
          ]
        },
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "2mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "3kb",
              "maximumError": "5.5kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "apps/ftu-ui/src/environments/environment.ts",
              "with": "apps/ftu-ui/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nx/angular:dev-server",
      "continuous": true
    },
    "compodoc": {
      "executor": "@twittwer/compodoc:compodoc",
      "options": {
        "tsConfig": "apps/ftu-ui/tsconfig.app.json"
      }
    },
    "build-webcomponent": {
      "command": "node tools/scripts/bundle-scripts.mjs dist/apps/ftu-ui/browser/"
    }
  }
}
