{
  "name": "human-atlas",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "generators": {
    "@schematics/angular:component": {
      "style": "scss"
    }
  },
  "tags": ["app", "human-atlas"],
  "sourceRoot": "apps/human-atlas/src",
  "prefix": "human-atlas",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "options": {
        "outputPath": "dist/apps/human-atlas",
        "index": "apps/human-atlas/src/index.html",
        "main": "apps/human-atlas/src/main.ts",
        "polyfills": "apps/human-atlas/src/polyfills.ts",
        "tsConfig": "apps/human-atlas/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          "apps/human-atlas/src/favicon.ico",
          "apps/human-atlas/src/assets",
          {
            "glob": "**/*",
            "input": "apps/human-atlas/src/static",
            "output": "."
          }
        ],
        "styles": ["apps/human-atlas/src/styles.scss"],
        "stylePreprocessorOptions": {
          "includePaths": ["node_modules/swiper"]
        },
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "2mb",
              "maximumError": "5mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "6kb",
              "maximumError": "1mb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "apps/human-atlas/src/environments/environment.ts",
              "with": "apps/human-atlas/src/environments/environment.prod.ts"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        },
        "staging": {
          "baseHref": "/apps/human-atlas/",
          "outputHashing": "none"
        },
        "preview": {
          "baseHref": "/apps/human-atlas/",
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "human-atlas:build:production"
        },
        "development": {
          "buildTarget": "human-atlas:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "human-atlas:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/human-atlas/jest.config.ts"
      }
    },
    "compodoc": {
      "executor": "@twittwer/compodoc:compodoc",
      "options": {
        "tsConfig": "apps/human-atlas/tsconfig.json",
        "outputPath": "dist/compodoc/human-atlas"
      },
      "configurations": {
        "ci": {
          "silent": true
        },
        "serve": {
          "watch": true,
          "disableCoverage": false,
          "disablePrivate": false,
          "disableInternal": false
        }
      }
    },
    "compodoc-json": {
      "executor": "@twittwer/compodoc:compodoc",
      "options": {
        "tsConfig": "apps/human-atlas/tsconfig.json",
        "outputPath": "dist/compodoc/human-atlas",
        "exportFormat": "json"
      }
    },
    "build-pages-schema": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "tsc --target esnext -m nodenext --skipLibCheck ./apps/human-atlas/src/app/utils/data-schema.ts",
          "node ./apps/human-atlas/src/app/utils/cli.mjs json-schemas ./apps/human-atlas/src/pages.schema.json",
          "npx nx format:write --files apps/human-atlas/src/pages.schema.json"
        ]
      }
    }
  }
}
