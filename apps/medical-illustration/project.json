{
  "name": "medical-illustration",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/medical-illustration/src",
  "prefix": "hra",
  "tags": ["type:app", "project:ftu", "webcomponent"],
  "metadata": {
    "version": "0.5.0"
  },
  "targets": {
    "build": {
      "executor": "@nx/angular:application",
      "options": {
        "assets": ["apps/medical-illustration/src/favicon.png", "apps/medical-illustration/src/assets"],
        "polyfills": ["zone.js"]
      },
      "configurations": {
        "staging": {
          "fileReplacements": [
            {
              "replace": "apps/medical-illustration/src/environments/environment.ts",
              "with": "apps/medical-illustration/src/environments/environment.stage.ts"
            }
          ]
        },
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "apps/medical-illustration/src/environments/environment.ts",
              "with": "apps/medical-illustration/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nx/angular:dev-server",
      "continuous": true
    },
    "build-webcomponent": {
      "command": "node tools/scripts/bundle-scripts.mjs dist/apps/medical-illustration/browser/"
    }
  }
}
